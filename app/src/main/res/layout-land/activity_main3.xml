<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="@color/activityBackground4"
    tools:context="rtrk.pnrs1.ra94_2013.projekat1.Statistics">

    <TextView
        android:id="@+id/title"
        android:text="@string/statisticsTitle"
        android:textAlignment="center"
        android:textSize="20dp"
        android:textAllCaps="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"/>

    <rtrk.pnrs1.ra94_2013.projekat1.PriorityGraph
        android:id="@+id/highGraph"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/mediumGraph"
        android:layout_marginRight="50dp"/>

    <rtrk.pnrs1.ra94_2013.projekat1.PriorityGraph
        android:id="@+id/mediumGraph"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"/>

    <rtrk.pnrs1.ra94_2013.projekat1.PriorityGraph
        android:id="@+id/lowGraph"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/mediumGraph"
        android:layout_marginLeft="50dp"/>
</RelativeLayout>